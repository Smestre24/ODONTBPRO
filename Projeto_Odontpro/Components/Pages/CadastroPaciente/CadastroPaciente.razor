@page "/cadastrodepaciente"
@using Projeto_Odontpro.Models.Paciente
@inject Projeto_Odontpro.Models.Paciente.PacienteDAO pacienteDAO

@rendermode InteractiveServer
<PageTitle>Cadastro de Paciente</PageTitle>



<div class="container">
    <div class="form-box">
        <h2>Cadastro de Paciente</h2>

        @if (SuccessMsgVisible)
        {
            <div class="success">PACIENTE CADASTRADO COM SUCESSO!</div>
        }

        <EditForm Model="@paciente" OnValidSubmit="SalvarPaciente">
            <label>Código:</label>
            <input type="text" @bind="paciente.Id" />

            <label>Nome do Paciente:</label>
            <input type="text" @bind="paciente.Nome" required />

            <label>Sexo:</label>
            <select @bind="paciente.Sexo" required>
                <option value="">Selecione...</option>
                <option value="Feminino">Feminino</option>
                <option value="Masculino">Masculino</option>
            </select>

            <label>Telefone:</label>
            <input type="tel" @bind="paciente.Telefone" required />

            <label>Data de Nascimento:</label>
            <input type="date" @bind="paciente.Nascimento" required />

            <label>Estado:</label>
            <select @bind="paciente.Estado" required>
                <option value="">Selecione...</option>
                <option value="AC">Acre</option>
                <option value="AL">Alagoas</option>
                <option value="AP">Amapá</option>
                <option value="AM">Amazonas</option>
                <option value="BA">Bahia</option>
                <option value="CE">Ceará</option>
                <option value="DF">Distrito Federal</option>
                <option value="ES">Espírito Santo</option>
                <option value="GO">Goiás</option>
                <option value="MA">Maranhão</option>
                <option value="MT">Mato Grosso</option>
                <option value="MS">Mato Grosso do Sul</option>
                <option value="MG">Minas Gerais</option>
                <option value="PA">Pará</option>
                <option value="PB">Paraíba</option>
                <option value="PR">Paraná</option>
                <option value="PE">Pernambuco</option>
                <option value="PI">Piauí</option>
                <option value="RJ">Rio de Janeiro</option>
                <option value="RN">Rio Grande do Norte</option>
                <option value="RS">Rio Grande do Sul</option>
                <option value="RO">Rondônia</option>
                <option value="RR">Roraima</option>
                <option value="SC">Santa Catarina</option>
                <option value="SP">São Paulo</option>
                <option value="SE">Sergipe</option>
                <option value="TO">Tocantins</option>
            </select>

            <label>Endereço:</label>
            <textarea @bind="paciente.Endereco"></textarea>

            <label>Observações:</label>
            <textarea @bind="paciente.Observacoes"></textarea>

            <button type="submit">Cadastrar Paciente</button>
        </EditForm>
    </div>
</div>

<style>
    body {
        margin: 0;
        font-family: 'Poppins', sans-serif;
        background: linear-gradient(135deg, #d8f0ff, #e8eaff);
        min-height: 100vh;
        display: flex;
    }

    .menu-lateral {
        width: 250px;
        background-color: #6db8ff;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .menu-lateral .btn-expandir {
            background: #4fa0ff;
            padding: 10px;
            text-align: center;
            cursor: pointer;
            font-weight: bold;
            color: white;
            letter-spacing: 1px;
        }

        .menu-lateral ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .menu-lateral ul li {
                transition: 0.2s;
            }

                .menu-lateral ul li:hover {
                    background-color: #4fa0ff;
                }

                .menu-lateral ul li a {
                    text-decoration: none;
                    color: white;
                    padding: 15px;
                    display: flex;
                    align-items: center;
                }

                    .menu-lateral ul li a .icon {
                        margin-right: 10px;
                        font-size: 18px;
                    }

                .menu-lateral ul li.ativo {
                    background-color: #4fa0ff;
                }

    .container {
        margin-left: 270px;
        flex-grow: 1;
        padding: 50px;
        display: flex;
        justify-content: center;
        align-items: flex-start;
    }

    .form-box {
        background: rgba(255, 255, 255, 0.97);
        border-radius: 20px;
        padding: 40px 50px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        animation: fadeIn 0.8s ease;
    }

    h2 {
        text-align: center;
        color: #4fa0ff;
        margin-bottom: 25px;
        font-size: 26px;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: 600;
        color: #333;
    }

    input, textarea, select {
        width: 100%;
        padding: 12px;
        margin-bottom: 15px;
        border-radius: 8px;
        border: 1px solid #ccc;
        transition: all 0.2s ease;
        font-size: 15px;
    }

        input:focus, textarea:focus, select:focus {
            border-color: #4fa0ff;
            box-shadow: 0 0 8px rgba(79,160,255,0.3);
            outline: none;
        }

    button {
        width: 100%;
        padding: 14px;
        background: linear-gradient(90deg, #4fa0ff, #7bcaff);
        color: #fff;
        border: none;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 10px rgba(79,160,255,0.3);
    }

        button:hover {
            background: linear-gradient(90deg, #7bcaff, #4fa0ff);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px rgba(79,160,255,0.5);
        }

    .success {
        color: #28a745;
        text-align: center;
        margin-bottom: 15px;
        display: none;
        font-weight: 600;
    }
</style>
@code {
    Paciente paciente = new Paciente();

    bool SuccessMsgVisible = false;

    private void SalvarPaciente()
    {
        try
        {
            pacienteDAO.Inserir(paciente);

            SuccessMsgVisible = true;

            // Limpa o formulário
            paciente = new Paciente();

            // Esconde a mensagem depois de 4s
            var _ = Task.Delay(4000).ContinueWith(_ =>
            {
                SuccessMsgVisible = false;
                InvokeAsync(StateHasChanged);
            });
        }
        catch (Exception ex)
        {
            Console.WriteLine("Erro ao salvar paciente: " + ex.Message);
        }
    }
}