@page "/agenda"


<h3>Agenda</h3>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agenda de Pacientes</title>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background: #f4f4f4;
        }


        #calendar {
            max-width: 900px;
            margin: auto;
            background: #fff;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 0 8px rgba(0,0,0,0.2);
        }

    </style>
</head>
<body>

    <h1 style="text-align:center;"> Agenda de Consultas</h1>
    <div id="calendar"></div>

    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const calendarEl = document.getElementById('calendar');

            const savedEvents = JSON.parse(localStorage.getItem("consultas")) || [];

            const calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'timeGridWeek',
                selectable: true,
                editable: true,
                slotMinTime: "08:00:00",
                slotMaxTime: "20:00:00",
                headerToolbar:
                {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                events: savedEvents,


                select: function (info) {
                    const nomePaciente = prompt("Nome do paciente:");
                    if (nomePaciente) {
                        const newEvent = {
                            title: "Consulta - " + nomePaciente,
                            start: info.start,
                            end: info.end,
                            allDay: info.allDay
                        };
                        calendar.addEvent(newEvent);
                        salvarEventos();
                    }
                    calendar.unselect();
                },


                eventClick: function (info) {
                    if (confirm("Deseja remover este agendamento?")) {
                        info.event.remove();
                        salvarEventos();
                    }
                },


                eventDrop: salvarEventos,
                eventResize: salvarEventos
            });

            calendar.render();


            function salvarEventos() {
                const eventos = calendar.getEvents().map(event => (
                    {
                        title: event.title,
                        start: event.start,
                        end: event.end,
                        allDay: event.allDay
                    }));
                localStorage.setItem("consultas", JSON.stringify(eventos));
            }
        });
    </script>

</body>
</html>
