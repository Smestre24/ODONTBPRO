@page "/excluirfuncionario/{Id:int}/excluir"
@rendermode InteractiveServer


@using Projeto_Odontpro.Models;
@using Projeto_Odontpro.Models.Funcionario
@inject FuncionarioDAO funcionarioDAO;
@inject NavigationManager Navigation;

<PageTitle>Excluir Produto</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão de Estoque</h1>

@if (erro != string.Empty)
{
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Erro!</strong>
    <span class="block sm:inline">@erro</span>
  </div>
}


<EditForm Model="produto" OnSubmit="Excluir" FormName="Excluir produto">


  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Atenção!</strong>
    <span class="block sm:inline">Esta ação não pode ser desfeita.</span>


        <p class="text-lg">Tem certeza que deseja excluir o produto <strong>@produto.Nome</strong>?</p>
  </div>


  <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded mt-2">Excluir</button>
  <a href="/produtos" class="bg-gray-500 text-white px-4 py-2 rounded mt-2">Cancelar</a>

</EditForm>

@code {

  private string erro = string.Empty;

  [Parameter]
  public int Id { get; set; }

  [SupplyParameterFromForm]
    private Models.Produto.Produto produto { get; set; } = new();

  protected override void OnInitialized()
  {
        var _funcionario = funcionarioDAO.BuscarPorId(Id);

        if (_funcionario != null)
    {
            produto = _funcionario;
    }
    else
    {
      erro = "funcionario não encontrado.";
    }
  }

  private void Excluir()
  {
    try
    {
            funcionarioDAO.Excluir(funcionario.Id);

            Navigation.NavigateTo("/produtos");
    }
    catch (Exception ex)
    {
            erro = $"Erro ao excluir o produto: {ex.Message}";
    }

  }
}