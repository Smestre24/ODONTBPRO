@page "/estoque"

@using Projeto_Odontpro.Models

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Cadastro de Estoque - OdontPro</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #cce4ff;
            display: flex;
        }

        .sidebar {
            background-color: #42a5f5;
            width: 220px;
            height: 100vh;
            color: white;
            padding: 20px;
            box-sizing: border-box;
        }

            .sidebar h2 {
                font-size: 22px;
                margin-bottom: 30px;
            }

            .sidebar a {
                display: block;
                color: white;
                text-decoration: none;
                margin: 15px 0;
            }

                .sidebar a:hover {
                    text-decoration: underline;
                }

        .main {
            flex: 1;
            padding: 40px;
        }

        .form-container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            width: 500px;
            margin: auto;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h2 {
            text-align: center;
            color: #2196f3;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-top: 10px;
            font-weight: bold;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }

        button {
            margin-top: 20px;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            color: white;
            cursor: pointer;
        }

        .btn-salvar {
            background-color: #42a5f5;
        }

        .btn-cancelar {
            background-color: #6c757d;
            margin-left: 10px;
        }

        .btn-salvar:hover {
            background-color: #2196f3;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="form-container">
            <h2>Cadastro de Estoque</h2>
            <form>
                <label>Nome do Item:</label>
                <input type="text" placeholder="Ex: Anestesia Dental">

                <label>Quantidade:</label>
                <input type="number" placeholder="Ex: 50">

                <label>Forma de Pagamento:</label>
                <select>
                    <option>Selecione...</option>
                    <option>À vista</option>
                    <option>Parcelado</option>
                </select>

                <label>Marca:</label>
                <input type="text" placeholder="Ex: Alphacaine">

                <label>Valor (R$):</label>
                <input type="number" step="0.01" placeholder="Ex: 5850.00">

                <label>Fornecedor:</label>
                <select>
                    <option>Selecione o fornecedor...</option>
                    <option>Fornecedor A</option>
                    <option>Fornecedor B</option>
                    <option>Fornecedor C</option>
                </select>

                <label>Descrição:</label>
                <textarea rows="3" placeholder="Descrição detalhada do produto"></textarea>

                <div>
                    <button type="submit" class="btn-salvar">Salvar</button>
                    <button type="button" class="btn-cancelar">Cancelar</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
