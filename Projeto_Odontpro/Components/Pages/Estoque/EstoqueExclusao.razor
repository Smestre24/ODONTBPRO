@page "/estoque/{Id:int}/excluir"
@rendermode InteractiveServer

@using Projeto_Odontpro.Models;
@using AppWeb.Models;
@inject EstoqueDAO estoqueDAO;
@inject NavigationManager Navigation;

<PageTitle>Estoque</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Exclusão de Estoque</h1>

@if (erro != string.Empty)
{
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Erro!</strong>
    <span class="block sm:inline">@erro</span>
  </div>
}


<EditForm Model="estoque" OnSubmit="Excluir">
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Atenção!</strong>
    <span class="block sm:inline">Esta ação não pode ser desfeita.</span>


    <p class="text-lg">Tem certeza que deseja excluir o estoque <strong>@estoque.Nome</strong>?</p>
  </div>


  <button type="submit" class="bg-red-500 text-white px-4 py-2 rounded mt-2">Excluir</button>
  <a href="/produtos" class="bg-gray-500 text-white px-4 py-2 rounded mt-2">Cancelar</a>

</EditForm>

@code {

  private string erro = string.Empty;

  [Parameter]
  public int Id { get; set; }

  [SupplyParameterFromForm]
  private Estoque estoque { get; set; } = new();

  protected override void OnInitialized()
  {
    var _estoque = estoqueDAO.BuscarPorId(Id);

    if (_estoque != null)
    {
      estoque = _estoque;
    }
    else
    {
      erro = "Estoque não encontrado.";
    }
  }

  private void Excluir()
  {
    try
    {
      estoqueDAO.Excluir(estoque.Id);

      Navigation.NavigateTo("/estoque");
    }
    catch (Exception ex)
    {
      erro = $"Erro ao excluir o estoque: {ex.Message}";
    }

  }
}