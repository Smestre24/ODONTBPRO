@page "/ListaEstoque"

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Estoque - OdontPro</title>
    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #e3f2fd;
            display: flex;
        }

        .sidebar {
            background-color: #42a5f5;
            width: 220px;
            height: 100vh;
            color: white;
            padding: 20px;
            box-sizing: border-box;
        }

        .sidebar h2 {
            font-size: 22px;
            margin-bottom: 30px;
        }

        .sidebar a {
            display: block;
            color: white;
            text-decoration: none;
            margin: 15px 0;
        }

        .sidebar a:hover {
            text-decoration: underline;
        }

        .main {
            flex: 1;
            padding: 40px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: white;
            border-radius: 10px;
            overflow: hidden;
        }

        th, td {
            text-align: left;
            padding: 12px;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #42a5f5;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .btn-editar {
            background-color: #42a5f5;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 6px 10px;
            cursor: pointer;
        }

        .btn-excluir {
            background-color: #f44336;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 6px 10px;
            cursor: pointer;
        }

        .btn-adicionar {
            background-color: #42a5f5;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 15px;
            margin-top: 20px;
            cursor: pointer;
        }

        .btn-sair {
            background-color: #6c757d;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 15px;
            margin-top: 20px;
            margin-left: 10px;
            cursor: pointer;
        }
    </style>
</head>
<body>
 

    <div class="table table-striped">
        <h2>Estoque</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Quantidade</th>
                    <th>Forma de Pagamento</th>
                    <th>Marca</th>
                    <th>Valor (R$)</th>
                    <th>Fornecedor</th>
                    <th>Descrição</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Anestesia Dental</td>
                    <td>45</td>
                    <td>Parcelado</td>
                    <td>Alphacaine</td>
                    <td>5850,00</td>
                    <td>Fornecedor A</td>
                    <td>Anestesia Dental Alphacaine</td>
                    <td>
                        <button class="btn-editar">Editar</button>
                        <button class="btn-excluir">Excluir</button>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Pasta de Dente</td>
                    <td>105</td>
                    <td>À vista</td>
                    <td>Colgate</td>
                    <td>2100,00</td>
                    <td>Fornecedor B</td>
                    <td>Pasta de Dente Colgate</td>
                    <td>
                        <button class="btn-editar">Editar</button>
                        <button class="btn-excluir">Excluir</button>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="mt-3">
            <NavLink class="btn btn-adicionar" href="/estoque">Adicionar </NavLink>
        </div>

        <button class="btn-sair">Sair</button>
    </div>
</body>
</html>