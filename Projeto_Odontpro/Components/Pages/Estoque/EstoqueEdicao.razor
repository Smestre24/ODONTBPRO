@page "/estoque/{Id:int}/editar"
@rendermode InteractiveServer

@using Projeto_Odontpro.Models;
@using AppWeb.Models;
@inject EstoqueDAO estoqueDAO;
@inject NavigationManager Navigation;

<PageTitle>Estoque</PageTitle>

<h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100 mb-6">Atualização Estoque - @estoque.Nome</h1>

@if (erro != string.Empty)
{
  <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
    <strong class="font-bold">Erro!</strong>
    <span class="block sm:inline">@erro</span>
  </div>
}

<EditForm Model="estoque" OnSubmit="Salvar">
  <div class="mb-4">
    <label for="nome" class="block text-sm font-medium text-gray-700">Nome</label>
    <input @bind-value="estoque.Nome" type="text" id="nome"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>
  <div class="mb-4">
    <label for="quantidade" class="block text-sm font-medium text-gray-700">Quantidade</label>
    <input @bind-value="estoque.Quantidade" type="number" id="quantidade"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>
  <div class="mb-4">
    <label for="formapagamento" class="block text-sm font-medium text-gray-700">FormaPagamento</label>
    <input @bind-value="estoque.FormaPagamento" type="number" id="formapagamento"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>
  <div class="mb-4">
        <label for="marca" class="block text-sm font-medium text-gray-700">Marca</label>
        <input @bind-value="estoque.Marca" type="number" id="marca"
               class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>
  <div class="mb-4">
    <label for="valor" class="block text-sm font-medium text-gray-700">Valor</label>
    <input @bind-value="estoque.Valor" type="text" id="valor"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" />
  </div>

  <div class="mb-4">
    <label for="descricao" class="block text-sm font-medium text-gray-700">Descrição</label>
    <textarea id="descricao"
      class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2">@estoque.Descricao</textarea>
  </div>

  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Salvar</button>
</EditForm>

@code {

  private string erro = string.Empty;

  [Parameter]
  public int Id { get; set; }

  [SupplyParameterFromForm]
  private Estoque estoque { get; set; } = new();

  protected override void OnInitialized()
  {
    var _estoque= estoqueDAO.BuscarPorId(Id);

    if (_estoque != null)
    {
      estoque = _estoque;
    }
    else
    {
      erro = "Estoque não encontrado.";
    }
  }

  private void Salvar()
  {
    try
    {
      estoqueDAO.Atualizar(estoque);

      Navigation.NavigateTo("/estoque");
    }
    catch (Exception ex)
    {
      erro = $"Erro ao salvar o estoque: {ex.Message}";
    }

  }
}