@page "/AtendimentoCliente"

<div class="content">
    <div class="topbar"></div>
    <div class="user"></div>

    <div class="modal">
        <div class="modal-header">ATENDIMENTO AO CLIENTE</div>
        <div class="modal-content">

            <label for="mensagem">Insira aqui a mensagem automática/lembrete:</label><br><br>
            <textarea id="mensagem" @bind="Mensagem" placeholder="Digite sua mensagem..."></textarea>

            <div class="checkbox">
                <input type="checkbox" id="selecionar" @bind="SelecionarTodos" @onchange="SelecionarTodosEmails">
                <label for="selecionar">&nbsp;Selecionar todos os e-mails ativos do banco de dados.</label>
            </div>

            <div class="emails-list">
                @if (Clientes?.Any() == true)
                {
                    @foreach (var cliente in Clientes)
                    {
                        <div>
                            <input type="checkbox" @bind="cliente.Selecionado" />
                            <label>@cliente.Nome (@cliente.Email)</label>
                        </div>
                    }
                }
                else
                {
                    <p>Nenhum cliente encontrado.</p>
                }
            </div>

            <button class="prosseguir" @onclick="EnviarMensagem">PROSSEGUIR</button>
        </div>
    </div>
</div>

@code {
    private string Mensagem { get; set; } = string.Empty;
    private bool SelecionarTodos { get; set; }
    private List<ClienteSelecionado> Clientes { get; set; } = new();

    protected override void OnInitialized()
    {
        // Exemplo de dados fixos (sem banco, só para testar a tela)
        Clientes = new()
        {
            new ClienteSelecionado { Id = 1, Nome = "João Silva", Email = "joao@email.com" },
            new ClienteSelecionado { Id = 2, Nome = "Maria Souza", Email = "maria@email.com" }
        };
    }

    private void SelecionarTodosEmails(ChangeEventArgs e)
    {
        foreach (var cliente in Clientes)
            cliente.Selecionado = SelecionarTodos;
    }

    private void EnviarMensagem()
    {
        var selecionados = Clientes.Where(c => c.Selecionado).ToList();
        Console.WriteLine($"Mensagem: {Mensagem}");
        foreach (var c in selecionados)
            Console.WriteLine($"Enviando para {c.Email}");
    }

    public class ClienteSelecionado
    {
        public int Id { get; set; }
        public string Nome { get; set; }
        public string Email { get; set; }
        public bool Selecionado { get; set; }
    }
}
